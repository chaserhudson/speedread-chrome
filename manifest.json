{
  "manifest_version": 3,
  "name": "SpeedRead",
  "version": "1.0",
  "description": "RSVP speed reader â€” highlight text, press Alt+S to speed read",
  "permissions": ["activeTab", "scripting", "storage", "contextMenus"],
  "commands": {
